

{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "node",
    "target": "es5", 
    "module": "commonjs", 
    "strict": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src/*"
],
"exclude": [
    "node_modules",
    "**/*.spec.ts"
]
}